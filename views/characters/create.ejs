<div class="tab-content" id="create-character-tabs">
    <div class="tab-pane show active flex-column" id="section1" role="tabpanel">
        <div class="container">
            <div class="form-section d-flex flex-column">
                <div class="row">
                    <div class="col character-image">
                        <label for="chracter-image">
                            <img src="/public/svg/character-icon-template.svg" alt="Character icon"
                                class="character-icon">
                            <input type="file" id="chracter-image">
                        </label>
                    </div>
                    <div class="col">
                        <div class="row">
                            <label for="character-name">Nome: </label>
                            <input type="text" id="character-name">
                        </div>
                        <div class="row">
                            <div class="col-sm-6 p-2">
                                <label for="character-level">Nível: </label>
                                <input type="number" id="character-level">
                            </div>
                            <div class="col-sm-6 p-2">
                                <label for="character-xp">XP: </label>
                                <input type="number" id="character-xp">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row d-flex justify-content-around">
                    <label for="tormento">Tormento</label>
                    <select id="tormento" onchange="updateSubtormentos(this)">
                        <option value="1" selected>Vingança</option>
                        <option value="2">Vingança</option>
                        <option value="3">Vingança</option>
                        <option value="4">Vingança</option>
                        <option value="5">Vingança</option>
                        <option value="6">Vingança</option>
                    </select>
                </div>
                <div class="row d-flex justify-content-around">
                    <label for="subtormento">Subtormento</label>
                    <select id="subtormento">
                    </select>
                </div>
            </div>
            <div class="row d-flex flex-row pt-2 mx-auto justify-content button-navigator justify-content-center">
                <button onclick="handleBackSection()">Anterior</button>
                <button onclick="handleNextSection()">Próximo</button>
            </div>
        </div>
    </div>

    <div class="tab-pane invisible" id="section2" role="tabpanel">
        <div class="col">
            <div class="row">
                <div class="col">
                    <label for="character-def">DEF: </label>
                    <input type="number" id="character-def">
                </div>
                <div class="col">
                    <label for="character-pv">PV: </label>
                    <input type="number" id="character-pv">
                </div>
            </div>
        </div>
        <button onclick="handleBackSection()">Anterior</button>
        <button onclick="handleNextSection()">Próximo</button>
    </div>
    <div class="tab-pane invisible" id="section3" role="tabpanel">
        <h1>TAB 3</h1>

        <button onclick="handleBackSection()">Anterior</button>
        <button onclick="handleNextSection()">Próximo</button>
    </div>

    <div class="tab-pane invisible" id="section4" role="tabpanel">
        <h1>TAB 4</h1>

        <button onclick="handleBackSection()">Anterior</button>
        <button onclick="handleNextSection()">Próximo</button>
    </div>
    <div class="tab-pane invisible" id="section5" role="tabpanel">
        <h1>TAB 5</h1>

        <button onclick="handleBackSection()">Anterior</button>
        <button onclick="handleNextSection()">Próximo</button>
    </div>
</div>