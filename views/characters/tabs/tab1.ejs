<div class="tab-pane show active" id="section1" role="tabpanel">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-sm-6">
                <div class="text-center">
                    <label for="character-image">
                        <img src="/public/svg/character-icon-template.svg" alt="Character icon" class="character-icon">
                        <input type="file" id="chracter-image" hidden>
                    </label>
                </div>

                <div class="form-group">
                    <label for="character-name">Nome</label>
                    <input type="text" class="form-control" id="character-name" name="character-name"
                        placeholder="Digite o seu nome...">
                </div>

                <div class="row">
                    <div class="col-4 col-sm-3">
                        <div class="form-group">
                            <label for="character-level">Nível: </label>
                            <input type="number" id="character-level" class="form-control">
                        </div>
                    </div>
                    <div class="col-4 col-sm-3">
                        <div class="form-group">
                            <label for="character-xp">XP: </label>
                            <input type="number" id="character-xp" class="form-control">
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label for="tormento">Tormento</label>
                    <select id="tormento" onchange="updateSubtormentos(this)" class="form-control">
                        <option value="1" selected>Vingança</option>
                        <option value="2">Vingança</option>
                        <option value="3">Vingança</option>
                        <option value="4">Vingança</option>
                        <option value="5">Vingança</option>
                        <option value="6">Vingança</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="subtormento">Subtormento</label>
                    <select id="subtormento" class="form-control">
                    </select>
                </div>
            </div>
        </div>

        <div class="row text-center">
            <div class="col-6">
                <button type="button" class="btn btn-light" onclick="handleBackSection()">Anterior</button>
            </div>
            <div class="col-6">
                <button type="button" class="btn btn-dark" onclick="handleNextSection()">Próximo</button>
            </div>
        </div>
    </div>
</div>