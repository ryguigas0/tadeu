<div class="page container text-center">
	<div class="row">
		<div class="col-12">
			<button class="btn btn-danger" onclick="back()">
				Voltar
			</button>
		</div>
	</div>
	<div class="row">
		<div class="col-6">
			<img src="<%= root %>/public/img/characters/<%= (personagem.icon ? (personagem.id + " .jpg")
				: "default.png" ) %>"
			alt="<%- personagem.name %>" class="img-fluid">
		</div>
		<div class="col-6">
			<h1>
				<%- personagem.name %>
			</h1>
			<p>
				NV: <%- personagem.level %>
			</p>
			<p>
				EXP: <%- personagem.exp %>
			</p>
			<h2>Tormento</h2>
			<div>
				<%- personagem.tormento.main %>
			</div>
			<div>
				<%- personagem.tormento.sub %>
			</div>
		</div>
	</div>
	<div class="row">
		<h3>Atributos</h3>
		<div class="container">
			<div class="row">
				<div class="col-6">
					<div>FIS: <%- personagem.atributos.fisico %>
					</div>
					<div>INT: <%- personagem.atributos.inteligencia %>
					</div>
					<div>AGI: <%- personagem.atributos.agilidade %>
					</div>
					<div>COR: <%- personagem.atributos.coragem %>
					</div>
				</div>
				<div class="col-6">
					<div>PV: <%- personagem.atributos.fisico %>
					</div>
					<div>DEF: <%- personagem.atributos.inteligencia %>
					</div>
					<div>Ações: <%- personagem.atributos.agilidade %>
					</div>
					<div>INI: <%- personagem.atributos.coragem %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<h2>Antecedentes: <%- personagem.antecedentesPontos %>
		</h2>
		<div class="container">
			<div class="row">
				<div class="col-6">
					<div>
						COMB: <%- personagem.antecedentes.combate %>
					</div>
					<div>
						NEG: <%- personagem.antecedentes.negocio %>
					</div>
					<div>
						MONT: <%- personagem.antecedentes.montaria %>
					</div>
					<div>
						TRAD: <%- personagem.antecedentes.tradicao %>
					</div>
				</div>
				<div class="col-6">
					<div>
						LAB: <%- personagem.antecedentes.labuta %>
					</div>
					<div>
						EXPL: <%- personagem.antecedentes.exploracao %>
					</div>
					<div>
						ROUBO: <%- personagem.antecedentes.roubo %>
					</div>
					<div>
						MED: <%- personagem.antecedentes.medicina %>
					</div>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<h3>Equipamentos</h3>
		<div class="container vertical-scroll">
			<div class="row">
				<div class="col-6">
					<div>Nome</div>
				</div>
				<div class="col-6">
					<div>Dano</div>
				</div>
			</div>
			<% for( let i=0; i < personagem.equipamentos.length; i++ ) { %>
				<div class="row">
					<div class="col-6">
						<%- personagem.equipamentos[i].nome %>
					</div>
					<div class="col-6">
						<%- personagem.equipamentos[i].dano %>
					</div>
				</div>
				<% } %>
		</div>
		<h3>Habilidades</h3>
		<div class="container vertical-scroll">
			<div class="row">
				<div class="col-6">
					Nome
				</div>
				<div class="col-6">
					Descrição
				</div>
			</div>
			<div class="row">
				<% for( let i=0; i < personagem.habilidades.length; i++ ) { %>
					<div class="row">
						<div class="col-6">
							<%- personagem.habilidades[i].nome %>
						</div>
						<div class="col-6">
							<%- personagem.habilidades[i].descricao %>
						</div>
					</div>

					<% } %>
			</div>
		</div>
	</div>
	<div class="row">
		<h2>Cavalo</h2>
		<div class="container">
			<div class="row">
				<div class="col-6">
					<p>
						Nome: <%- personagem.cavalo.nome %>
					</p>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<div class="container">
						<div class="row justify-content-around">
							<div class="col-3">
								<p>
									PV: <%- personagem.cavalo.pv %>
								</p>
							</div>
							<div class="col-3">
								<p>
									Dano: <%- personagem.cavalo.dano %>
								</p>
							</div>
							<div class="col-3">
								<p>
									DEF: <%- personagem.cavalo.def %>
								</p>
							</div>
						</div>
						<div class="row justify-content-around">
							<div class="col-12">
								<div>
									Potência: <%- personagem.cavalo.atributos.potencia %>
								</div>
								<div>
									Vigor: <%- personagem.cavalo.atributos.vigor %>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-6">
					<h3>Itens cavalo</h3>
					<div class="vertical-scroll">
						<% for( let i=0; i < personagem.cavalo.itens.length; i++ ) { %>
							<div class="row">
								<%- personagem.cavalo.itens[i].nome %>
							</div>
							<% } %>
					</div>
				</div>
				<div class="col-6">
					<div class="container">
						<h4>
							Fidelidade: <%- personagem.cavalo.atributos.fidelidade %>
						</h4>
						<div class="row">
							<div class="col-4">
								<% if (personagem.cavalo.atributos.fidelidade>= 1 ) { %>
									Adquirido
									<% } else { %>
										Não
										<% }%>
							</div>
							<div class="col-8">
								<label for="fidelidade-0">+ Nome</label>
							</div>
						</div>
						<div class="row">
							<div class="col-4">
								<% if (personagem.cavalo.atributos.fidelidade>= 2 ) { %>
									Adquirido
									<% } else { %>
										Não
										<% }%>
							</div>
							<div class="col-8">
								<label for="fidelidade-1">+1 de potência</label>
							</div>
						</div>
						<div class="row">
							<div class="col-4">
								<% if (personagem.cavalo.atributos.fidelidade>= 3 ) { %>
									Adquirido
									<% } else { %>
										Não
										<% }%>
							</div>
							<div class="col-8">
								<label for="fidelidade-2">
									+ Assovio e outros não podem montar
								</label>
							</div>
						</div>
						<div class="row">
							<div class="col-4">
								<% if (personagem.cavalo.atributos.fidelidade>= 4) { %>
									Adquirido
									<% } else { %>
										Não
										<% }%>
							</div>
							<div class="col-8">
								<label for="fidelidade-3">+2 potência</label>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="/public/js/character.js"></script>

<%- contentFor("cabecalho") %>

	<link rel="stylesheet" href="/public/css/character.css">